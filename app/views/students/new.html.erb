<h1>Create a Student!</h1>
<% if @student.errors.any? %>
  <ul>
    <% @student.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@student, {html: {class: 'ui form'}}) do |f| %>
  <div class='field'>
    <%= f.text_field :name, {placeholder: 'Enter the students name...', class: 'input field'} %>
  </div>
  <div class='field'>
    <%= f.text_field :email, placeholder: 'Enter the students email...' %>
  </div>
  <div class='field'>
    <%= f.date_field(:dob) %>
  </div>
  <div class='field'>
    <%= f.submit class: 'ui massive positive basic button' %>
  </div>
<% end %>
