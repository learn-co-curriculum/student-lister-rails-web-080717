<h1><%= flash[:message] %></h1>
<%= form_tag '/login', class: 'ui form' do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :'user[username]' %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :'user[password]' %>
  </div>
  <div class="field">
    <%= submit_tag 'Sign in', class: 'ui big pink inverted button' %>
  </div>
<% end %>
